@model RiaPizza.DTOs.Auth.LoginDto
@{
    Layout = null;
}

<style>
    .center{
        margin-left: auto;
        margin-right: auto;
        width: 50%;
        display:block;
    }
</style>
<!DOCTYPE html>
<html lang="en">


