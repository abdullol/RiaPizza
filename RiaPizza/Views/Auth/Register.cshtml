@model RiaPizza.DTOs.Auth.RegisterDto
@{
    ViewData["Title"] = "Add New User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <style>
        .field-icon {
            float: right;
            margin-right: 8px;
            margin-top: -30px;
            position: relative;
            z-index: 2;
            cursor: pointer;
        }
    </style>
<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <ul class="breadcrumb breadcrumb-style ">
                    <li class="breadcrumb-item bcrumb-1">
                        <a href="~/Home/Index">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="breadcrumb-item bcrumb-2">
                        <a href="#" onClick="return false;">Add User</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="body">
        <form method="post" asp-action="Register" asp-controller="Auth">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">

                    <div class="body">

                        <h2 class="card-inside-title">Register User</h2>
                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" required asp-for="firstName" class="form-control" placeholder="First Name" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" required asp-for="lastName" class="form-control" placeholder="Last Name" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" required asp-for="userName" class="form-control" placeholder="Username" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="email" required asp-for="email" class="form-control" placeholder="email" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" required asp-for="city" class="form-control" placeholder="City" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" required asp-for="address" class="form-control" placeholder="Address" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" required asp-for="phoneNumber" class="form-control" placeholder="Phone Number" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <input id="password-field" asp-for="password" type="password" placeholder="set password" class="form-control">
                                <span toggle="#password-field" class="fa fa-lg fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="col-md-12">
                                <p>
                                    <b>Select Role</b>
                                </p>
                                <div class="form-group">
                                    <div class="select-wrapper focused">
                                        <select class="form-control" asp-for="RoleName" asp-items="@ViewBag.Rolelist as SelectList" tabindex="-1">
                                            <option hidden>Select Role</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-sm-6">
                                <button class="btn-hover color-8" type="submit" style="margin-left:-1px;">Register</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts{
    <script>

        $(".toggle-password").click(function () {

            $(this).toggleClass("fa-eye fa-eye-slash");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    </script>

}