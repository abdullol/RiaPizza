@model RiaPizza.DTOs.Auth.UpdateUserDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <ul class="breadcrumb breadcrumb-style ">
                    <li class="breadcrumb-item">
                        <h4 class="page-title">Users</h4>
                    </li>
                    <li class="breadcrumb-item bcrumb-1">
                        <a href="~/Auth/AllUsers">
                            <i class="fas fa-home"></i> All Users
                        </a>
                    </li>
                    <li class="breadcrumb-item bcrumb-2">
                        <a href="#" onClick="return false;">Edit</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <form class="card p-5" asp-action="Edit" asp-controller="Auth" method="post">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserName" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PhoneNumber" class="form-control">
            </div>
        </div>
        <div class="form-group mt-2">
            <a style="float:right; padding-top:7px" asp-action="AllUsers" class="btn btn-primary">Cancel</a>
            <button type="submit" class="btn btn-primary" style="float:right">Update</button>
        </div>
    </form>
    <form class="card p-5" asp-action="ManageUserRoles" asp-controller="Auth" method="post">
        <div class="card">
            <div class="card-header">
                <h2>Manage User Roles</h2>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" value="@Model.Id" />
                <select class="form-control" name="RoleName">
                    @foreach (var role in ViewBag.Role)
                    {
                        <option value="@role">@role</option>
                    }
                </select>
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary"
                        style="width:auto" />
            </div>
        </div>
    </form>
</div>