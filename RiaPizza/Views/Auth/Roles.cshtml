@model RiaPizza.DTOs.Role.RoleDto
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <ul class="breadcrumb breadcrumb-style ">
                    <li class="breadcrumb-item bcrumb-1">
                        <a href="~/Home/Index">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="breadcrumb-item bcrumb-2">
                        <a href="#" onClick="return false;">Add Role</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="body">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">

                <div class="body">

                    <h2 class="card-inside-title">Add Roles</h2>
                    <div class="row clearfix">
                        <div class="col-lg-12">
                            <form method="post" asp-action="CreateRole" asp-controller="Auth">
                                <div class="row clearfix">
                                    <div class="col-lg-10">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="text" asp-for="RoleName" class="form-control" placeholder="Role Name" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2" style="text-align:center">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <button class="btn btn-primary" type="submit">Add role</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-12">
                            <h2 class="card-inside-title">App Roles</h2>
                            <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                <thead>
                                    <tr><th>Roles</th></tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model.RoleList)
                                    {
                                        <tr><td>@role.Name</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>


    </div>
</div>

