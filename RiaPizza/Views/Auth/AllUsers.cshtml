@model IEnumerable<RiaPizza.Data.ApplicationUser.AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .heading {
        color: #212529;
    }

    .align-center {
        text-align: center;
    }
</style>
<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <ul class="breadcrumb breadcrumb-style ">
                    <li class="breadcrumb-item">
                        <h4 class="page-title">Users</h4>
                    </li>
                    <li class="breadcrumb-item bcrumb-1">
                        <a href="~/Auth/AllUsers">
                            <i class="fas fa-home"></i> All Users
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Basic Examples -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        <strong>Users</strong>
                    </h2>
                </div>

                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>User Name</th>
                                    <th>Phone No</th>
                                    <th>UserRole</th>
                                    <th>Detail</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var count = 0;
                                    var edit = 0;
                                    var delete = 0;
                                }
                                @foreach (var user in Model)
                                {
                                    if (user.UserRoles.Count != 0)
                                    {
                                        <tr>
                                            <td>@user.FirstName</td>
                                            <td>@user.LastName</td>
                                            <td>@user.UserName</td>
                                            <td>@user.PhoneNumber</td>
                                            <td>
                                                @if (user.UserRoles.Count == 0)
                                                {
                                                    <span>Customer</span>
                                                }
                                                @foreach (var userRole in user.UserRoles)
                                                {
                                                    @userRole.Role
                                                    <a>.</a>
                                                }
                                            </td>
                                            <td>
                                                <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                                                    <a class="btn btn-info" data-toggle="modal" data-target=".details_@count"><i class="fas fa-list-ul"></i></a>
                                                    <a asp-action="Edit" asp-controller="Auth" asp-route-id="@user.Id" class="btn btn-success"><i class="fas fa-pencil-alt"></i></a>
                                                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                                </form>

                                                <div class="modal fade bd-example-modal-lg details_@count" tabindex="-1" role="dialog"
                                                     aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-lg">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="myLargeModalLabel">Dish Details</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="row clearfix">
                                                                    <br />
                                                                    <br />
                                                                    <div class="row clearfix" style="width:100%;">

                                                                        <div class="col-md-4"><b>City :</b> @user.City</div>
                                                                        <div class="col-md-4"><b>Address :</b> @user.Address </div>
                                                                        <div class="col-md-4"><b>Email :</b> @user.Email</div>
                                                                    </div>
                                                                </div>
                                                                <hr />
                                                                <br />
                                                                <hr />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    count++;
                                    edit++;
                                    delete++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>User Name</th>
                                    <th>Phone No</th>
                                    <th>UserRole</th>
                                    <th>Detail</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/assets/js/table.min.js"></script>
    <script src="~/assets/js/pages/tables/jquery-datatable.js"></script>
}

